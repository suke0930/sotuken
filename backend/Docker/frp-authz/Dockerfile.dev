FROM node:20-alpine

# Install wget for healthcheck
RUN apk add --no-cache wget

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install ALL dependencies (including devDependencies for tsx)
RUN npm ci

# Create data directory
RUN mkdir -p /app/data && chown -R node:node /app/data

# Source files will be mounted via volume in docker-compose.dev.yml
# No COPY src needed here

# Use non-root user
USER node

# Expose port
EXPOSE 3001

# Start in development mode with tsx watch
CMD ["npm", "run", "dev"]
